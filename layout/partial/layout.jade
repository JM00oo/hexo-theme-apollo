doctype
html(lang=config.language)
    head
        include head
    body
        include scripts
        .wrap
            header
                a.logo-link(href=url_for())
                    img(src=url_for(theme.logo) alt="logo")
                include nav
            #site_search
               .form-group
                  i.fa.fa-search
                  input#local-search-input.st-search-input.st-default-search-input.form-control(type="text" name="q" results="0" placeholder="search...")
               #local-search-result
            if config.search
               script
                  | var search_path = "#{config.search.path}";
                  | if (search_path.length == 0) {
                  |   search_path = "search.xml";
                  | }
                  | var path = "#{config.root}" + search_path;
                  | searchFunc(path, 'local-search-input', 'local-search-result');
            main.container
                block container
            footer
                block pagination
                block copyright
